# OneDay.run Platform Configuration
# Copy this file to .env and fill in your values

# Application
APP_NAME="OneDay.run Platform"
DEBUG=false
SECRET_KEY=your-secret-key-change-this

# Environment
APP_ENV=development
LOG_LEVEL=info

# Docker ports (host side) - change if you have conflicts
# Set to 0 to let Docker choose a free port automatically
# If you want a stable port, set it explicitly (e.g. APP_HOST_PORT=8000)
APP_HOST_PORT=0
# Set to 0 to let Docker choose a free port automatically
POSTGRES_HOST_PORT=0
REDIS_HOST_PORT=0
LITELLM_HOST_PORT=0

# LLM - Anthropic (required)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# LLM provider
# - anthropic: uses ANTHROPIC_API_KEY + DEFAULT_MODEL/FALLBACK_MODEL (see config/settings.py)
# - ollama: uses OLLAMA_BASE_URL + OLLAMA_MODEL (local)
LLM_PROVIDER=anthropic

# Ollama (local)
# If you run Ollama on the host and the app runs in Docker, keep host.docker.internal
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=ollama/llama3.1:8b

# LLM - OpenAI (optional, for fallback)
OPENAI_API_KEY=sk-your-key-here

# LiteLLM Proxy (optional)
LITELLM_PROXY_URL=
LITELLM_API_KEY=

DEFAULT_MODEL=ollama/llama3.1:8b
FALLBACK_MODEL=ollama/llama3.1:8b
MAX_TOKENS=8192
TEMPERATURE=0.7

SESSION_TIMEOUT_MINUTES=60
WS_HEARTBEAT_INTERVAL=30

CORS_ALLOW_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

UI_ENABLE_STT=true
UI_ENABLE_TTS=true

# GitHub (required for repo creation)
GITHUB_TOKEN=ghp_your-token-here
GITHUB_ORG=prototypowanie-pl

# Deployment Platforms (at least one required)
RAILWAY_TOKEN=your-railway-token
VERCEL_TOKEN=your-vercel-token
RENDER_API_KEY=your-render-api-key

# Database (optional)
# For docker-compose (recommended)
POSTGRES_USER=oneday
POSTGRES_PASSWORD=oneday
POSTGRES_DB=oneday
DATABASE_URL=postgresql+asyncpg://oneday:oneday@db:5432/oneday

# Redis (optional, for caching)
REDIS_URL=redis://redis:6379

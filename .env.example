# OneDay.run Platform Configuration
# Copy this file to .env and fill in your values

# Application
APP_NAME="OneDay.run Platform"
DEBUG=false
SECRET_KEY=your-secret-key-change-this

# Docker ports (host side) - change if you have conflicts
# App will be available at http://localhost:${APP_HOST_PORT}
APP_HOST_PORT=18000
# Set to 0 to let Docker choose a free port automatically
POSTGRES_HOST_PORT=0
REDIS_HOST_PORT=0
LITELLM_HOST_PORT=0

# LLM - Anthropic (required)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# LLM - OpenAI (optional, for fallback)
OPENAI_API_KEY=sk-your-key-here

# LiteLLM Proxy (optional)
# LITELLM_PROXY_URL=http://localhost:4000
# LITELLM_API_KEY=sk-litellm-key

# GitHub (required for repo creation)
GITHUB_TOKEN=ghp_your-token-here
GITHUB_ORG=prototypowanie-pl

# Deployment Platforms (at least one required)
RAILWAY_TOKEN=your-railway-token
VERCEL_TOKEN=your-vercel-token
RENDER_API_KEY=your-render-api-key

# Database (optional)
DATABASE_URL=sqlite:///./oneday.db
# DATABASE_URL=postgresql+asyncpg://user:pass@localhost/oneday

# Redis (optional, for caching)
# REDIS_URL=redis://localhost:6379
